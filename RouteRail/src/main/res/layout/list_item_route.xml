<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:background="@drawable/shape_under_border_line_black_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州-乌鲁木齐"
            android:textSize="24dp"
            android:textColor="@color/color_bg"
            />

        <TextView
            android:id="@+id/item_route_shiftId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:textSize="18dp"
            android:text="车次:k384"
            android:textColor="@color/color_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_route_time"/>

        <TextView
            android:id="@+id/item_route_leave_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_bg"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="始发时间: 08:00AM"
            />

        <TextView
            android:id="@+id/item_route_cost_hours"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_bg"
            android:textSize="14dp"
            android:gravity="right"
            android:text="预计时间: 25小时"
            />
    </LinearLayout>



</LinearLayout>